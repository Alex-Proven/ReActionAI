<UserControl x:Class="ReActionAI.Integration.Revit.UI.ChatPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#FFF5F5F5"
             d:DesignHeight="600"
             d:DesignWidth="400">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Чат -->
        <ScrollViewer x:Name="MessagesScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      Margin="10"
                      Grid.Row="0">

            <StackPanel x:Name="MessagesPanel">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="TextWrapping" Value="Wrap"/>
                    </Style>
                </StackPanel.Resources>
            </StackPanel>
        </ScrollViewer>

        <!-- Панель ввода -->
        <Border x:Name="InputBorder"
                Background="White"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="14"
                Margin="10"
                Padding="8"
                Grid.Row="1">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="32"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопка + -->
                <Button x:Name="PlusButton"
                        Width="28"
                        Height="28"
                        Background="#EEE"
                        BorderThickness="0"
                        Margin="0,0,4,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="+"/>

                <!-- Поле ввода -->
                <Grid Grid.Column="1">

                    <TextBox x:Name="InputBox"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MinHeight="28"
                             BorderThickness="0"
                             VerticalScrollBarVisibility="Disabled"
                             Background="Transparent"
                             TextChanged="InputBox_OnTextChanged"/>

                    <TextBlock x:Name="InputPlaceholder"
                               Text="Введите сообщение…"
                               Foreground="#999"
                               IsHitTestVisible="False"
                               Margin="4,3,0,0"
                               VerticalAlignment="Top"/>
                </Grid>

                <!-- Кнопка отправить -->
                <Button x:Name="SendButton"
                        Grid.Column="2"
                        Width="28"
                        Height="28"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderThickness="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="➤"
                        Click="SendButton_OnClick"/>

            </Grid>
        </Border>

    </Grid>
</UserControl>
