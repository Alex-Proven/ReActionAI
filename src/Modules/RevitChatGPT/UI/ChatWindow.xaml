<Window x:Class="ReActionAI.Modules.RevitChatGPT.UI.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ReActionAI — ChatGPT" Height="540" Width="720"
        WindowStartupLocation="CenterScreen" Background="#222">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer x:Name="ChatScrollViewer" Grid.Row="0"
                      VerticalScrollBarVisibility="Auto" Background="#222">
            <StackPanel x:Name="ChatHistoryPanel" />
        </ScrollViewer>

        <DockPanel Grid.Row="1" Margin="0,10,0,0">
            <TextBox x:Name="UserInputBox" MinHeight="32" Margin="0,0,8,0"
                     VerticalContentAlignment="Center"
                     KeyDown="UserInputBox_KeyDown" />
            <Button x:Name="SendButton" Content="Отправить"
                    MinWidth="110" MinHeight="32"
                    Click="SendButton_Click" />
        </DockPanel>
    </Grid>
</Window>