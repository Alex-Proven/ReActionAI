<UserControl x:Class="ReActionAI.Modules.RevitChatGPT.UI.ChatPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="320" MinHeight="200"
             Background="#F3F3F3">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="ChatGPT"
                   FontSize="15"
                   FontWeight="SemiBold"
                   Foreground="#333333"
                   Margin="0,0,0,8"/>

        <!-- История сообщений -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#C8C8C8"
                BorderThickness="1"
                CornerRadius="6">
            <ScrollViewer x:Name="HistoryScroll"
                          VerticalScrollBarVisibility="Auto"
                          Padding="8">
                <StackPanel x:Name="History"/>
            </ScrollViewer>
        </Border>

        <!-- Поле ввода и кнопка -->
        <Grid Grid.Row="2" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Поле ввода -->
            <Border Grid.Column="0"
                    CornerRadius="14"
                    Background="White"
                    BorderBrush="#C8C8C8"
                    BorderThickness="1"
                    Padding="10,0"
                    Height="28"
                    VerticalAlignment="Center">
                <TextBox x:Name="PromptBox"
                         BorderThickness="0"
                         Background="Transparent"
                         FontSize="13"
                         Foreground="#2B2B2B"
                         VerticalContentAlignment="Center"
                         Height="26"
                         Text="Ask ChatGPT"/>
            </Border>

            <!-- Кнопка (стрелка как в ChatGPT Android) -->
            <Button Grid.Column="1"
                    Width="32"
                    Height="28"
                    Margin="6,0,0,0"
                    Padding="0"
                    Click="OnSend"
                    ToolTip="Отправить сообщение"
                    VerticalAlignment="Center"
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                                Background="White"
                                BorderBrush="#C8C8C8"
                                BorderThickness="1"
                                CornerRadius="14">
                            <Viewbox Margin="8">
                                <!-- Минималистичная ChatGPT-стрелка -->
                                <Path x:Name="Arrow"
                                      Stroke="#5F6368"
                                      StrokeThickness="1.8"
                                      StrokeEndLineCap="Round"
                                      StrokeLineJoin="Round"
                                      Data="M4,14 L16,7 L4,3 L6,7 L4,14 Z"/>
                            </Viewbox>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F7F7F7"/>
                                <Setter TargetName="Arrow" Property="Stroke" Value="#202124"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#E0E0E0"/>
                                <Setter TargetName="Arrow" Property="Stroke" Value="#1A73E8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</UserControl>