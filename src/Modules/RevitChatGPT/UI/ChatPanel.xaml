<UserControl x:Class="ReActionAI.Modules.RevitChatGPT.UI.ChatPanel"
             xml:lang="ru-RU"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="400">

    <!-- Styles -->
    <UserControl.Resources>

        <!-- Base round button style -->
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="999">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ChatHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="ChatMessageTextStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="NotificationTextStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

    </UserControl.Resources>


    <Grid Background="#FFF8F8F8">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FFF2F2F2" Padding="12">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="32"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"
                       Source="/ReActionAI.Modules.RevitChatGPT;component/Resources/icon32.png"
                       Width="44"
                       Height="44"
                       Margin="0,0,10,0"
                       Stretch="Uniform"/>

                <TextBlock Grid.Column="1"
                           Text="ReActionAI — ког&#x00AD;нитивный ас&#x00AD;систент для под&#x00AD;держки при&#x00AD;ня&#x00AD;тия про&#x00AD;ектных решений, повыш&#x00AD;ения эф&#x00AD;фек&#x00AD;тивности BIM-про&#x00AD;ек&#x00AD;ти&#x00AD;рования и опти&#x00AD;ми&#x00AD;за&#x00AD;ции про&#x00AD;ектных про&#x00AD;цессов"
                           TextWrapping="Wrap"
                           TextAlignment="Justify"
                           IsHyphenationEnabled="True"
                           FontSize="12"
                           Foreground="#333333"
                           VerticalAlignment="Center"/>

            </Grid>
        </Border>

        <!-- Messages area -->
        <Border Grid.Row="1"
                Margin="12,8,12,8"
                Background="White"
                CornerRadius="12"
                BorderBrush="#E0E0E0"
                BorderThickness="1">

            <ScrollViewer x:Name="MessagesScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">

                <StackPanel x:Name="MessagesPanel"
                            Margin="12,8,12,8"
                            Orientation="Vertical"
                            VerticalAlignment="Top">

                    <StackPanel.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="TextAlignment" Value="Justify"/>
                            <Setter Property="IsHyphenationEnabled" Value="True"/>
                        </Style>
                    </StackPanel.Resources>

                </StackPanel>

            </ScrollViewer>

        </Border>

        <!-- Input and controls -->
        <Border Grid.Row="2"
                Margin="12,0,12,12"
                Background="Transparent">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- PLUS BUTTON -->
                <Button x:Name="PlusButton"
                        Grid.Column="0"
                        Width="32"
                        Height="32"
                        Margin="0,0,8,0"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        Cursor="Hand">

                    <Button.Style>
                        <Style TargetType="Button"
                               BasedOn="{StaticResource RoundButtonStyle}">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="BorderBrush" Value="#E0E0E0"/>
                            <Setter Property="BorderThickness" Value="1"/>
                        </Style>
                    </Button.Style>

                    <TextBlock Text="+"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="Black"/>

                </Button>

                <!-- INPUT + SEND -->
                <Grid Grid.Column="1">

                    <Border x:Name="InputBorder"
                            Background="#FFF4F4F4"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="18"
                            MinHeight="32">

                        <Grid>

                            <TextBox x:Name="InputBox"
                                     Margin="12,10,44,4"
                                     VerticalContentAlignment="Top"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="13"
                                     Foreground="#222222"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     MinHeight="24"
                                     MaxHeight="96"/>

                            <TextBlock x:Name="InputPlaceholder"
                                       Text="Напишите сообщение"
                                       Margin="16,8,44,0"
                                       VerticalAlignment="Top"
                                       Foreground="#888888"
                                       FontSize="13"
                                       TextWrapping="Wrap"
                                       IsHitTestVisible="False"/>

                        </Grid>
                    </Border>

                    <!-- SEND BUTTON – NOW EXACTLY 24 × 24 -->
                    <Button x:Name="SendButton"
                            Width="24"
                            Height="24"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,4,0"
                            Cursor="Hand">

                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource RoundButtonStyle}">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Style>
                        </Button.Style>

                        <TextBlock Text="↑"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="Black"/>
                    </Button>

                </Grid>

            </Grid>

        </Border>

    </Grid>

</UserControl>
