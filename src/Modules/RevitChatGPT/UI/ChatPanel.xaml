<UserControl x:Class="ReActionAI.Modules.RevitChatGPT.UI.ChatPanel"
             xml:lang="ru-RU"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="400"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">

    <UserControl.Resources>

        <!-- БАЗОВЫЙ стиль круглой кнопки -->
        <Style x:Key="RoundButtonBase" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="100"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Кнопка "+" 32 x 32 -->
        <Style x:Key="PlusButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource RoundButtonBase}">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
        </Style>

        <!-- Кнопка "Отправить" 24 x 24 -->
        <Style x:Key="SendButtonStyle"
               TargetType="Button"
               BasedOn="{StaticResource RoundButtonBase}">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
        </Style>

    </UserControl.Resources>



    <!-- Корень: футер докается вниз, контент занимает всё остальное -->
    <DockPanel Background="#FFF8F8F8" LastChildFill="True">

        <!-- HEADER -->
        <Border DockPanel.Dock="Top"
                Background="#FFF2F2F2"
                Padding="12">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="32"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"
                       Source="/ReActionAI.Modules.RevitChatGPT;component/Resources/icon32.png"
                       Width="44" Height="44"
                       Margin="0,0,10,0"/>

                <TextBlock Grid.Column="1"
                           Text="ReActionAI — когнитивный ассистент для поддержки принятия проектных решений, повышения эффективности BIM-проектирования и оптимизации проектных процессов"
                           TextWrapping="Wrap"
                           TextAlignment="Justify"
                           IsHyphenationEnabled="True"
                           FontSize="12"
                           Foreground="#333333"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="2"
                        Width="28" Height="28"
                        ToolTip="Настройки"
                        Cursor="Hand"
                        VerticalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent"
                                    CornerRadius="14"
                                    BorderThickness="1"
                                    BorderBrush="#E0E0E0">
                                <TextBlock Text="" FontSize="14"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </Grid>
        </Border>



        <!-- FOOTER -->
        <Border DockPanel.Dock="Bottom"
                Margin="12,0,12,4.4"
                Background="Transparent">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Кнопка "+" -->
                <Button x:Name="PlusButton"
                        Grid.Column="0"
                        VerticalAlignment="Bottom"
                        Margin="0,0,8,0"
                        Style="{StaticResource PlusButtonStyle}">
                    <TextBlock Text="+"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="Black"/>
                </Button>


                <!-- Поле ввода + кнопка отправить -->
                <Grid Grid.Column="1">
                    <Border x:Name="InputBorder"
                            Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="18"
                            MinHeight="32">

                        <Grid>

                            <TextBox x:Name="InputBox"
                                     Margin="12,10,44,4"
                                     VerticalContentAlignment="Top"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="13"
                                     Foreground="#222222"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     MinHeight="24"/>

                            <TextBlock x:Name="InputPlaceholder"
                                       Text="Напишите сообщение"
                                       Margin="16,8,44,0"
                                       VerticalAlignment="Top"
                                       Foreground="#888888"
                                       FontSize="13"
                                       TextWrapping="Wrap"
                                       IsHitTestVisible="False"/>



                            <!-- Кнопка «Отправить» с отступами:
                                 Right = 4, Top = 4, Bottom = 4 -->
                            <Button x:Name="SendButton"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Margin="0,4,4,4"
                                    Style="{StaticResource SendButtonStyle}">
                                <TextBlock Text="↑"
                                           FontSize="13"
                                           FontWeight="Bold"
                                           Foreground="Black"/>
                            </Button>

                        </Grid>

                    </Border>
                </Grid>

            </Grid>
        </Border>



        <!-- СООБЩЕНИЯ -->
        <Border Margin="12,8,12,8"
                Background="White"
                CornerRadius="12"
                BorderBrush="#E0E0E0"
                BorderThickness="1">

            <ScrollViewer x:Name="MessagesScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">

                <StackPanel x:Name="MessagesPanel"
                            Margin="12,8,12,8"
                            Orientation="Vertical"
                            VerticalAlignment="Top">
                    <StackPanel.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="TextAlignment" Value="Justify"/>
                            <Setter Property="IsHyphenationEnabled" Value="True"/>
                        </Style>
                    </StackPanel.Resources>
                </StackPanel>

            </ScrollViewer>

        </Border>

    </DockPanel>

</UserControl>
