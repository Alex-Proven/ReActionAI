<UserControl x:Class="ReActionAI.Modules.RevitChatGPT.UI.ChatPanel"
             xml:lang="ru-RU"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="400">

    <!-- Styles -->
    <UserControl.Resources>

        <!-- Base round button style -->
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="999">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Резерв: стили для заголовка / сообщений / уведомлений,
             если потом будем использовать по ключу -->
        <Style x:Key="ChatHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="ChatMessageTextStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="NotificationTextStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

    </UserControl.Resources>


    <Grid Background="#FFF8F8F8">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FFF2F2F2" Padding="12">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0"
                       Source="/ReActionAI.Modules.RevitChatGPT;component/Resources/icon32.png"
                       Width="44"
                       Height="44"
                       Margin="0,0,10,0"
                       Stretch="Uniform"/>

                <!-- Заголовок: выравнивание по ширине + автоматические переносы -->
                <TextBlock Grid.Column="1"
                           Text="ReActionAI — ког&#x00AD;нитивный ас&#x00AD;систент для под&#x00AD;держки при&#x00AD;ня&#x00AD;тия про&#x00AD;ектных реше&#x00AD;ний, по&#x00AD;вышения эф&#x00AD;фек&#x00AD;ти&#x00AD;вности BIM-про&#x00AD;ек&#x00AD;ти&#x00AD;рования и оп&#x00AD;ти&#x00AD;ми&#x00AD;за&#x00AD;ции про&#x00AD;ектных про&#x00AD;цессов"
                           TextWrapping="Wrap"
                           TextAlignment="Justify"
                           IsHyphenationEnabled="True"
                           FontSize="12"
                           Foreground="#333333"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Messages area -->
        <Border Grid.Row="1"
                Margin="12,8,12,8"
                Background="White"
                CornerRadius="12"
                BorderBrush="#E0E0E0"
                BorderThickness="1">

            <ScrollViewer x:Name="MessagesScrollViewer"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">

                <!-- Контейнер сообщений.
                     Здесь задаём стиль ТОЛЬКО для TextBlock внутри сообщений: -->
                <StackPanel x:Name="MessagesPanel"
                            Margin="12,8,12,8"
                            Orientation="Vertical"
                            VerticalAlignment="Top">

                    <StackPanel.Resources>
                        <!-- Стиль по умолчанию только для текста сообщений чата -->
                        <Style TargetType="TextBlock">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="TextAlignment" Value="Justify"/>
                            <Setter Property="IsHyphenationEnabled" Value="True"/>
                        </Style>
                    </StackPanel.Resources>

                </StackPanel>

            </ScrollViewer>

        </Border>

        <!-- Input and controls area -->
        <Border Grid.Row="2"
                Margin="12,0,12,12"
                Background="Transparent">

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left side: round plus button -->
                <Button x:Name="PlusButton"
                        Grid.Column="0"
                        Width="32"
                        Height="32"
                        Margin="0,0,8,0"
                        Background="White"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Style="{StaticResource RoundButtonStyle}">

                    <Button.Effect>
                        <DropShadowEffect BlurRadius="6"
                                          ShadowDepth="0"
                                          Opacity="0.12"/>
                    </Button.Effect>

                    <TextBlock Text="+"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="#333333"/>
                </Button>

                <!-- Right side: input + send button -->
                <Grid Grid.Column="1">

                    <!-- Input container -->
                    <Border x:Name="InputBorder"
                            Background="#FFF4F4F4"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="18"
                            MinHeight="32">

                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="6"
                                                          ShadowDepth="0"
                                                          Opacity="0.12"/>
                                    </Setter.Value>
                                </Setter>

                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsKeyboardFocused, ElementName=InputBox}"
                                                 Value="True">
                                        <Setter Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="16"
                                                                  ShadowDepth="1"
                                                                  Opacity="0.20"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <Grid>

                            <!-- Text input -->
                            <TextBox x:Name="InputBox"
                                     Margin="12,10,44,4"
                                     VerticalContentAlignment="Top"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="13"
                                     Foreground="#222222"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     MinHeight="24"
                                     MaxHeight="96"/>

                            <!-- Placeholder -->
                            <TextBlock x:Name="InputPlaceholder"
                                       Text="Напишите сообщение"
                                       Margin="16,8,44,0"
                                       VerticalAlignment="Top"
                                       Foreground="#888888"
                                       FontSize="13"
                                       TextWrapping="Wrap"
                                       IsHitTestVisible="False"/>

                        </Grid>

                    </Border>

                    <!-- Send button (оставляю ровно там, где был) -->
                    <Button x:Name="SendButton"
                            Width="24"
                            Height="24"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="4,0,4,0">

                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource RoundButtonStyle}">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="BorderThickness" Value="1"/>

                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="6"
                                                          ShadowDepth="0"
                                                          Opacity="0.12"/>
                                    </Setter.Value>
                                </Setter>

                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FFF4F4F4"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#FFE0E0E0"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <TextBlock Text="↑"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="Black"/>
                    </Button>

                </Grid>

            </Grid>

        </Border>

    </Grid>

</UserControl>
