<UserControl x:Class="ReActionAI.Modules.RevitChatGPT.UI.ChatPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="400">

    <UserControl.Resources>

        <!-- Стиль круглых кнопок -->
        <Style x:Key="RoundButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="999">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid Background="#FFF8F8F8">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ▬▬▬▬ ЗАГОЛОВОК ▬▬▬▬ -->
        <Border Grid.Row="0"
                Background="#FFF2F2F2"
                Padding="12">

            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Иконка 44x44 -->
                <Image Grid.Column="0"
                       Source="/ReActionAI.Modules.RevitChatGPT;component/Resources/icon32.png"
                       Width="44"
                       Height="44"
                       Margin="0,0,10,0"
                       SnapsToDevicePixels="True"/>

                <!-- Шрифт 11 pt (как "Напишите сообщение") -->
                <TextBlock Grid.Column="1"
                           Text="ReActionAI — когнитивный ассистент для повышения эффективности BIM-проектирования и оптимизации проектных процессов"
                           FontSize="11"
                           FontWeight="Normal"
                           Foreground="#333333"
                           TextWrapping="Wrap"
                           VerticalAlignment="Center"/>
            </Grid>

        </Border>

        <!-- ▬▬▬▬ СООБЩЕНИЯ ▬▬▬▬ -->
        <Border Grid.Row="1"
                Margin="8"
                BorderBrush="#DDDDDD"
                BorderThickness="1">
            <ScrollViewer x:Name="MessagesScrollViewer"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="MessagesPanel"/>
            </ScrollViewer>
        </Border>

        <!-- ▬▬▬▬ НИЖНЯЯ ПАНЕЛЬ ▬▬▬▬ -->
        <Border Grid.Row="2"
                Background="#00FFFFFF"
                Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- кнопка "+" -->
                <Button x:Name="PlusButton"
                        Width="32"
                        Height="32"
                        Margin="0,0,8,0"
                        Style="{StaticResource RoundButtonStyle}"
                        Background="#FFF2F2F2"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <TextBlock Text="+"
                               FontSize="18"
                               Foreground="#555555"/>
                </Button>

                <Grid Grid.Column="1">
                    <Border x:Name="InputBorder"
                            Background="#FFF4F4F4"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="18"
                            Height="32">

                        <Grid>
                            <TextBox x:Name="InputBox"
                                     Margin="12,4,44,4"
                                     VerticalContentAlignment="Center"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     FontSize="13"
                                     Foreground="#222222"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"/>

                            <TextBlock x:Name="InputPlaceholder"
                                       Text="Напишите сообщение"
                                       Margin="16,4,44,4"
                                       VerticalAlignment="Center"
                                       Foreground="#888888"
                                       FontSize="13"
                                       IsHitTestVisible="False"/>
                        </Grid>
                    </Border>

                    <!-- отправка -->
                    <Button x:Name="SendButton"
                            Width="24"
                            Height="24"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="4,0,4,0"
                            Style="{StaticResource RoundButtonStyle}"
                            Background="Black"
                            BorderBrush="Black">
                        <TextBlock Text="↑"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                    </Button>
                </Grid>
            </Grid>
        </Border>

    </Grid>
</UserControl>
