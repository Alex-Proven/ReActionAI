<UserControl x:Class="ReActionAI.Modules.RevitChatGPT.UI.ChatPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="320" MinHeight="200"
             Background="#F3F3F3">

    <!-- ========= Ð ÐµÑÑƒÑ€ÑÑ‹: ÑÑ‚Ð¸Ð»Ð¸ ========= -->
    <UserControl.Resources>

        <!-- Ð¡Ð²ÐµÑ‚Ð»Ð°Ñ Ñ€Ð°Ð¼ÐºÐ° ÐºÐ°Ðº Ð² Revit -->
        <SolidColorBrush x:Key="RevitBorder" Color="#CCB8B8B8"/>
        <SolidColorBrush x:Key="RevitBorderHover" Color="#A0A0A0A0"/>
        <SolidColorBrush x:Key="RevitFieldBg" Color="White"/>
        <SolidColorBrush x:Key="RevitText" Color="#333333"/>

        <!-- Ð¡Ñ‚Ð¸Ð»ÑŒ Ð·Ð°ÐºÑ€ÑƒÐ³Ð»Ñ‘Ð½Ð½Ð¾Ð³Ð¾ TextBox -->
        <Style x:Key="RoundedTextBox" TargetType="Border">
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="BorderBrush" Value="{StaticResource RevitBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource RevitFieldBg}"/>
        </Style>

        <!-- ÐšÑ€ÑƒÐ³Ð»Ð°Ñ ÐºÐ½Ð¾Ð¿ÐºÐ° Ñ Ñ‚Ð¾Ð½ÐºÐ¾Ð¹ Ð¾Ð±Ð²Ð¾Ð´ÐºÐ¾Ð¹ -->
        <Style x:Key="RoundIconButton" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#FFF"/>
            <Setter Property="BorderBrush" Value="{StaticResource RevitBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="16">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="BorderBrush"
                                        Value="{StaticResource RevitBorderHover}"/>
                                <Setter TargetName="bd" Property="Background" Value="#FAFAFA"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="bd" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Ð¡ÐºÑ€Ð¾Ð»Ð»-Ð¿Ñ€Ð¾ÑÐ¼Ð¾Ñ‚Ñ€ Ñ Revit-Ñ€Ð°Ð¼ÐºÐ¾Ð¹ -->
        <Style x:Key="RoundedScrollViewer" TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="{StaticResource RevitBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

    </UserControl.Resources>

    <!-- ========= Ð Ð°Ð·Ð¼ÐµÑ‚ÐºÐ° Ð¿Ð°Ð½ÐµÐ»Ð¸ ========= -->
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Ð—Ð°Ð³Ð¾Ð»Ð¾Ð²Ð¾Ðº -->
        <TextBlock Text="ChatGPT"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="#333333"
                   Margin="0,0,0,8"/>

        <!-- Ð˜ÑÑ‚Ð¾Ñ€Ð¸Ñ -->
        <Border Grid.Row="1" Style="{StaticResource RoundedScrollViewer}">
            <ScrollViewer x:Name="HistoryScroll"
                          VerticalScrollBarVisibility="Auto" Padding="8">
                <StackPanel x:Name="History"/>
            </ScrollViewer>
        </Border>

        <!-- Ð’Ð²Ð¾Ð´: [+] [Ð¿Ð¾Ð»Ðµ] [ÑÑ‚Ñ€ÐµÐ»ÐºÐ° Ð²Ð²ÐµÑ€Ñ…] -->
        <Grid Grid.Row="2" Margin="0,8,0,0" VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <!-- ÐšÐ½Ð¾Ð¿ÐºÐ° ÑÐ»ÐµÐ²Ð°: â€œ+â€ -->
            <Button x:Name="AttachButton"
                    Grid.Column="0"
                    Style="{StaticResource RoundIconButton}"
                    ToolTip="Ð”Ð¾Ð±Ð°Ð²Ð¸Ñ‚ÑŒ (Ð·Ð°Ð³Ð»ÑƒÑˆÐºÐ°)">
                <Viewbox Width="14" Height="14">
                    <Path Data="M 8,2 L 8,14 M 2,8 L 14,8"
                          Stroke="#444"
                          StrokeThickness="2"
                          StrokeStartLineCap="Round"
                          StrokeEndLineCap="Round"/>
                </Viewbox>
            </Button>

            <!-- ÐŸÐ¾Ð»Ðµ Ð²Ð²Ð¾Ð´Ð° -->
            <Grid Grid.Column="1">
                <Border Style="{StaticResource RoundedTextBox}"/>
                <TextBox x:Name="PromptBox"
                         Margin="12,6,12,6"
                         Background="Transparent"
                         BorderThickness="0"
                         FontSize="13"
                         Foreground="{StaticResource RevitText}"
                         VerticalContentAlignment="Center"
                         TextWrapping="NoWrap"/>
                <TextBlock IsHitTestVisible="False"
                           Margin="16,6,12,6"
                           VerticalAlignment="Center"
                           Foreground="#9AA3AF"
                           FontSize="13"
                           Text="Ask ChatGPT">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text.Length, ElementName=PromptBox}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text.Length, ElementName=PromptBox}" Value="1">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text.Length, ElementName=PromptBox}">
                                    <DataTrigger.Value>0</DataTrigger.Value>
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- ÐšÐ½Ð¾Ð¿ÐºÐ° ÑÐ¿Ñ€Ð°Ð²Ð°: Ñ‚Ð¾Ð½ÐºÐ°Ñ ÑÑ‚Ñ€ÐµÐ»ÐºÐ° Ð²Ð²ÐµÑ€Ñ… -->
            <Button x:Name="SendButton"
                    Grid.Column="2"
                    Style="{StaticResource RoundIconButton}"
                    ToolTip="ÐžÑ‚Ð¿Ñ€Ð°Ð²Ð¸Ñ‚ÑŒ"
                    Click="OnSend">
                <Viewbox Width="14" Height="14">
                    <!-- ðŸ”¼ ÐœÐ¸Ð½Ð¸Ð¼Ð°Ð»Ð¸ÑÑ‚Ð¸Ñ‡Ð½Ð°Ñ ÑÑ‚Ñ€ÐµÐ»ÐºÐ° Ð²Ð²ÐµÑ€Ñ… -->
                    <Path Data="M 8,2 L 8,12 M 4,6 L 8,2 L 12,6"
                          Stroke="#444"
                          StrokeThickness="2"
                          StrokeStartLineCap="Round"
                          StrokeEndLineCap="Round"
                          Fill="Transparent"/>
                </Viewbox>
            </Button>
        </Grid>
    </Grid>
</UserControl>