<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- LIGHT COLORS -->
    <Color x:Key="Fluent.Light.RootBgColor">#FFF5F5F5</Color>
    <Color x:Key="Fluent.Light.HeaderBgColor">#FFF2F2F2</Color>
    <Color x:Key="Fluent.Light.MessagesBgColor">#FFFFFFFF</Color>
    <Color x:Key="Fluent.Light.MessagesBorderColor">#FFDDDDDD</Color>
    <Color x:Key="Fluent.Light.InputBgColor">#FFF4F4F4</Color>
    <Color x:Key="Fluent.Light.InputBorderColor">#FFE0E0E0</Color>
    <Color x:Key="Fluent.Light.TextColor">#FF222222</Color>
    <Color x:Key="Fluent.Light.PlaceholderColor">#FFA0A0A0</Color>
    <Color x:Key="Fluent.Light.PlusBgColor">#FFF2F2F2</Color>
    <Color x:Key="Fluent.Light.PlusBorderColor">#FFDDDDDD</Color>
    <Color x:Key="Fluent.Light.PlusGlyphColor">#FF555555</Color>
    <Color x:Key="Fluent.Light.SendBgColor">#FF80808A</Color>
    <Color x:Key="Fluent.Light.SendGlyphColor">#FFFFFFFF</Color>
    <Color x:Key="Fluent.Light.BubbleBgColor">#FFDCF0FF</Color>
    <Color x:Key="Fluent.Light.BubbleTextColor">#FF000000</Color>

    <!-- DARK COLORS -->
    <Color x:Key="Fluent.Dark.RootBgColor">#FF242424</Color>
    <Color x:Key="Fluent.Dark.HeaderBgColor">#FF2D2D30</Color>
    <Color x:Key="Fluent.Dark.MessagesBgColor">#FF1E1E1E</Color>
    <Color x:Key="Fluent.Dark.MessagesBorderColor">#FF3C3C3C</Color>
    <Color x:Key="Fluent.Dark.InputBgColor">#FF373737</Color>
    <Color x:Key="Fluent.Dark.InputBorderColor">#FF5A5A5A</Color>
    <Color x:Key="Fluent.Dark.TextColor">#FFFFFFFF</Color>
    <Color x:Key="Fluent.Dark.PlaceholderColor">#FFAAAAAA</Color>
    <Color x:Key="Fluent.Dark.PlusBgColor">#FF3C3C3C</Color>
    <Color x:Key="Fluent.Dark.PlusBorderColor">#FF5A5A5A</Color>
    <Color x:Key="Fluent.Dark.PlusGlyphColor">#FFFFFFFF</Color>
    <Color x:Key="Fluent.Dark.SendBgColor">#FFFFFFFF</Color>
    <Color x:Key="Fluent.Dark.SendGlyphColor">#FF000000</Color>
    <Color x:Key="Fluent.Dark.BubbleBgColor">#FF3860B2</Color>
    <Color x:Key="Fluent.Dark.BubbleTextColor">#FFFFFFFF</Color>

    <!-- LIGHT BRUSHES -->
    <SolidColorBrush x:Key="Fluent.Light.RootBgBrush" Color="{StaticResource Fluent.Light.RootBgColor}"/>
    <SolidColorBrush x:Key="Fluent.Light.HeaderBgBrush" Color="{StaticResource Fluent.Light.HeaderBgColor}"/>
    <SolidColorBrush x:Key="Fluent.Light.MessagesBgBrush" Color="{StaticResource Fluent.Light.MessagesBgColor}"/>
    <SolidColorBrush x:Key="Fluent.Light.MessagesBorderBrush" Color="{StaticResource Fluent.Light.MessagesBorderColor}"/>
    <SolidColorBrush x:Key="Fluent.Light.InputBgBrush" Color="{StaticResource Fluent.Light.InputBgColor}"/>
    <SolidColorBrush x:Key="Fluent.Light.InputBorderBrush" Color="{StaticResource Fluent.Light.InputBorderColor}"/>
    <SolidColorBrush x:Key="Fluent.Light.TextBrush" Color="{StaticResource Fluent.Light.TextColor}"/>
    <SolidColorBrush x:Key="Fluent.Light.PlaceholderBrush" Color="{StaticResource Fluent.Light.PlaceholderColor}"/>
    <SolidColorBrush x:Key="Fluent.Light.PlusBgBrush" Color="{StaticResource Fluent.Light.PlusBgColor}"/>
    <SolidColorBrush x:Key="Fluent.Light.PlusBorderBrush" Color="{StaticResource Fluent.Light.PlusBorderColor}"/>
    <SolidColorBrush x:Key="Fluent.Light.PlusGlyphBrush" Color="{StaticResource Fluent.Light.PlusGlyphColor}"/>
    <SolidColorBrush x:Key="Fluent.Light.SendBgBrush" Color="{StaticResource Fluent.Light.SendBgColor}"/>
    <SolidColorBrush x:Key="Fluent.Light.SendGlyphBrush" Color="{StaticResource Fluent.Light.SendGlyphColor}"/>
    <SolidColorBrush x:Key="Fluent.Light.BubbleBgBrush" Color="{StaticResource Fluent.Light.BubbleBgColor}"/>
    <SolidColorBrush x:Key="Fluent.Light.BubbleTextBrush" Color="{StaticResource Fluent.Light.BubbleTextColor}"/>

    <!-- DARK BRUSHES -->
    <SolidColorBrush x:Key="Fluent.Dark.RootBgBrush" Color="{StaticResource Fluent.Dark.RootBgColor}"/>
    <SolidColorBrush x:Key="Fluent.Dark.HeaderBgBrush" Color="{StaticResource Fluent.Dark.HeaderBgColor}"/>
    <SolidColorBrush x:Key="Fluent.Dark.MessagesBgBrush" Color="{StaticResource Fluent.Dark.MessagesBgColor}"/>
    <SolidColorBrush x:Key="Fluent.Dark.MessagesBorderBrush" Color="{StaticResource Fluent.Dark.MessagesBorderColor}"/>
    <SolidColorBrush x:Key="Fluent.Dark.InputBgBrush" Color="{StaticResource Fluent.Dark.InputBgColor}"/>
    <SolidColorBrush x:Key="Fluent.Dark.InputBorderBrush" Color="{StaticResource Fluent.Dark.InputBorderColor}"/>
    <SolidColorBrush x:Key="Fluent.Dark.TextBrush" Color="{StaticResource Fluent.Dark.TextColor}"/>
    <SolidColorBrush x:Key="Fluent.Dark.PlaceholderBrush" Color="{StaticResource Fluent.Dark.PlaceholderColor}"/>
    <SolidColorBrush x:Key="Fluent.Dark.PlusBgBrush" Color="{StaticResource Fluent.Dark.PlusBgColor}"/>
    <SolidColorBrush x:Key="Fluent.Dark.PlusBorderBrush" Color="{StaticResource Fluent.Dark.PlusBorderColor}"/>
    <SolidColorBrush x:Key="Fluent.Dark.PlusGlyphBrush" Color="{StaticResource Fluent.Dark.PlusGlyphColor}"/>
    <SolidColorBrush x:Key="Fluent.Dark.SendBgBrush" Color="{StaticResource Fluent.Dark.SendBgColor}"/>
    <SolidColorBrush x:Key="Fluent.Dark.SendGlyphBrush" Color="{StaticResource Fluent.Dark.SendGlyphColor}"/>
    <SolidColorBrush x:Key="Fluent.Dark.BubbleBgBrush" Color="{StaticResource Fluent.Dark.BubbleBgColor}"/>
    <SolidColorBrush x:Key="Fluent.Dark.BubbleTextBrush" Color="{StaticResource Fluent.Dark.BubbleTextColor}"/>

</ResourceDictionary>