<UserControl x:Class="ReActionAI.Views.AssistantPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="350"
             d:DesignHeight="600">

    <!-- Общие ресурсы (можно перенести в App.xaml) -->
    <UserControl.Resources>
        <!-- Фон панели (будет подменяться темой) -->
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#FFF5F5F5"/>
        <SolidColorBrush x:Key="PanelBorderBrush" Color="#FFCCCCCC"/>

        <!-- Футер (контейнер ввода + кнопки) -->
        <SolidColorBrush x:Key="FooterBackgroundBrush" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="FooterBorderBrush" Color="#FFDDDDDD"/>

        <!-- Текст -->
        <SolidColorBrush x:Key="HeaderTextBrush" Color="#FF333333"/>
        <SolidColorBrush x:Key="BodyTextBrush" Color="#FF222222"/>

        <!-- Кнопки -->
        <Style x:Key="FooterButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="MinWidth" Value="70"/>
        </Style>
    </UserControl.Resources>

    <Border Background="{DynamicResource PanelBackgroundBrush}"
            BorderBrush="{DynamicResource PanelBorderBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <!-- Заголовок -->
                <RowDefinition Height="Auto"/>
                <!-- Основная область (чат / контент ассистента) -->
                <RowDefinition Height="*"/>
                <!-- Футер: поле ввода + кнопки -->
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ====== ШАПКА ПАНЕЛИ ====== -->
            <Border Grid.Row="0"
                    Padding="8"
                    BorderThickness="0,0,0,1"
                    BorderBrush="{DynamicResource PanelBorderBrush}">
                <StackPanel>
                    <TextBlock Text="ReActionAI"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{DynamicResource HeaderTextBrush}"/>
                    <TextBlock Text="Когнитивный ассистент для поддержки принятия проектных решений, повышения эффективности BIM-проектирования и оптимизации проектных процессов"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0"
                               Foreground="{DynamicResource BodyTextBrush}"
                               FontSize="11"/>
                </StackPanel>
            </Border>

            <!-- ====== ОСНОВНОЙ КОНТЕНТ (ЧАТ) ====== -->
            <Border Grid.Row="1"
                    Margin="8,4,8,4"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource PanelBorderBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <!-- Здесь могут быть сообщения чата -->
                    <StackPanel x:Name="MessagesContainer"
                                Margin="6"
                                Orientation="Vertical">
                        <!-- Пример сообщения -->
                        <TextBlock Text="Здесь будут появляться сообщения ассистента и пользователя."
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource BodyTextBrush}"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- ====== ФУТЕР: ПОЛЕ ВВОДА + КНОПКИ ====== -->
            <!-- ВАЖНО: Margin снизу 4.4 — «прилеплено» к низу контейнера -->
            <Border Grid.Row="2"
                    Margin="8,0,8,4.4"
                    Padding="6"
                    Background="{DynamicResource FooterBackgroundBrush}"
                    BorderBrush="{DynamicResource FooterBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!-- Поле ввода тянется -->
                        <ColumnDefinition Width="*"/>
                        <!-- Блок кнопок по ширине содержимого -->
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Поле ввода текста -->
                    <TextBox x:Name="InputTextBox"
                             Grid.Column="0"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Hidden"
                             MinHeight="40"
                             MaxHeight="120"
                             Margin="0,0,4,0"/>

                    <!-- Кнопки справа, «приклеены» к тому же футеру -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom">
                        <Button x:Name="SendButton"
                                Style="{StaticResource FooterButtonStyle}"
                                Content="Send"/>
                        <Button x:Name="ClearButton"
                                Style="{StaticResource FooterButtonStyle}"
                                Content="Clear"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
